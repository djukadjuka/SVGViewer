<UserControl x:Class="SVGViewer.View.StatusBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SVGViewer.View"
             mc:Ignorable="d" 
             d:DesignHeight="48" d:DesignWidth="320">
    <Grid>
        <Label Content="{Binding StatusBarText}" Foreground="{Binding StatusBarTextColor}" Margin="1"></Label>
    </Grid>
</UserControl>
